  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="babyDetails.css">
  <style>
    html, body {
      height: 100%; /* Ensure the body and html take full height */
      margin: 0;
    }
    .main-container {
      height: 100vh; /* Full viewport height */
    }
    iframe {
      width: 100%;
      height: 100%;
      border: none;
      padding-top: 8vh;
    }
  </style>
</head>
<body  data-bs-target="#navbar" data-bs-offset="70">

  <!-- Navbar -->
  <nav id="navbar" class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
    <div class="container-fluid">
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="#weight" onclick="loadPage(1)">Weight</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#growth" onclick="loadPage(2)">Growth</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#vaccine" onclick="loadPage(3)">Vaccine</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#note" onclick="loadPage(4)">Note</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#qr" onclick="loadPage(5)">QR</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="main-container" style="grid-area:auto;">
    <iframe id="main-content" style="height: 100%;" src=""></iframe>
  </div>

  <!-- Bootstrap JS and jQuery -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

  <!-- Script to dynamically load content into iframes and adjust iframe height -->
  <script>
    let bid = null;
        $(document).ready(function() {
            let url = new URL(window.location.href);
            let params = new URLSearchParams(url.search);
            let bidPara = params.get('bid');
            if (bidPara == null) {
                alert("Dashbord URL not valid!");
            }else{
                bid=bidPara;
            }
            document.getElementById('main-content').src = "../interMother/weightChart/weightChart.html?bid="+bid;
    
        });
        function loadPage(page){
            if (bid != null) {
                switch (page) {
                    case 1:
                    document.getElementById('main-content').src = "../interMother/weightChart/weightChart.html?bid="+bid;
                        break;
                    case 2:
                    document.getElementById('main-content').src = "../interMother/growth/babyGrowth.html?bid="+bid;
                        break;
                    case 3:
                    document.getElementById('main-content').src = "../interMother/vaccine/babyVaccine.html?bid="+bid;
                        break;
                    case 4:
                    document.getElementById('main-content').src = "../interMother/note/babyNote.html?bid="+bid;
                        break;
                    case 5:
                    document.getElementById('main-content').src = "../interMother/QR/generateQR.html?bid="+bid;
                        break;

                    default:
                        break;
                }
            } else {
                alert("bid is null!");
            }
        }
  </script>

</body>
</html>
