  <!-- Bootstrap JS -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  <!-- Script to adjust iframe height dynamically -->
  <script>
    function resizeIframe(iframe) {
    iframe.style.height = iframe.contentWindow.document.body.scrollHeight + 'px';
    }

    // Function to scroll to the top of the page
    function scrollToTop() {
        window.scrollTo({ top: 0, behavior: 'smooth' });
    }

    let bid = null;

    $(document).ready(function() {
        
        alert("uyfuyg");
        let url = new URL(window.location.href);
        let params = new URLSearchParams(url.search);
        let bidPara = params.get('bid');

        if (bidPara == null) {
        alert("Dashboard URL not valid!");
        } else {
        bid = bidPara;
        loadInitialPages();
        }
    });

    function loadInitialPages() {

        alert("1213");
        loadPage(3); // Load Weight page
        loadPage(5); // Load Growth page
        loadPage(6); // Load Note page
        loadPage(2); // Load QR page
        loadPage(4); // Load Disease page


    }

    function loadPage(page) {
        alert(bid);
        //document.getElementById('qr-iframe').src = "../interMother/QR/generateQR.html?bid=" + bid;
        if (bid != null) {
        switch (page) {
            case 1:
            //document.getElementById('').src = "Home.html?bid=" + bid;
            break;
            case 2:
            document.getElementById('qr-iframe').src = "../interMother/QR/generateQR.html?bid=" + bid;
            break;
            case 3:
            document.getElementById('weight-iframe').src ="../interMother/weightChart/weightChart.html?bid=" + bid;
            break;
            case 4:
            document.getElementById('vaccine-iframe').src = "../interBaby/babyVaccine/babyVaccine.html?bid=" + bid;
            break;
            case 5:
            document.getElementById('growth-iframe').src = "../interBaby/growth/babyGrowth.html?bid=" + bid;
            break;
            case 6:
            document.getElementById('note-iframe').src = "../interBaby/note/babyNote.html?bid=" + bid;
            break;
            default:
            alert("Invalid page selection");
            break;
        }
        } else {
        alert("bid is null!");
        }
    }
</script>

  </script>

